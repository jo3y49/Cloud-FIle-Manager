@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1>Welcome to the Ultimate File Manager!</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary" asp-area="" asp-page="/FlleDisplay">View Files</a>
        <a class="btn btn-primary" asp-area="" asp-page="/FileUpload">Upload Files</a>
    } else {
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
    }
</div>